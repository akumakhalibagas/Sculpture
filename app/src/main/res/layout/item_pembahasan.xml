<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/cardColor"
        android:layout_margin="20dp"
        app:cardElevation="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/soal"
                android:fontFamily="@font/nunito_regular"
                android:textColor="@color/textColor"
                android:textSize="14sp"/>


            <RadioButton
                android:id="@+id/rb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fungis Magis"
                android:fontFamily="@font/nunito_regular"
                android:textColor="@color/textColor"
                android:textSize="14sp"
                android:layout_marginTop="15dp"/>


            <RadioButton
                android:id="@+id/rb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fungis Simbolik"
                android:fontFamily="@font/nunito_regular"
                android:textColor="@color/textColor"
                android:textSize="14sp"
                android:layout_marginTop="10dp"/>


            <RadioButton
                android:id="@+id/rb3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fungis Hias"
                android:fontFamily="@font/nunito_regular"
                android:textColor="@color/textColor"
                android:textSize="14sp"
                android:layout_marginTop="10dp"/>

            <RadioButton
                android:id="@+id/rb4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fungis Konstruksi"
                android:fontFamily="@font/nunito_regular"
                android:textColor="@color/textColor"
                android:textSize="14sp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/cardColor"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"

        app:cardElevation="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pembahasan :"
                android:fontFamily="@font/nunito_regular"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/textColorDesc"
                android:text="@string/lorem"
                android:fontFamily="@font/nunito_bold"
                android:id="@+id/tv_pembahasan"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>